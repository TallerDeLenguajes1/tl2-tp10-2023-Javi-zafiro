@model ListaUsuariosViewModel
    
<h3>Listado de Usuarios</h3>
<table class="table table-active table-striped table-sm text-center">
    <thead>
        <tr>
            <th scope="col">Id</th>
            <th scope="col">Nombre</th>
            <th scope="col">Tipo</th>
            <th></th>
        </tr>
    </thead>
    <tbody>
        @foreach (var usu in Model.ListaUsuariosVM)
        {
            <tr>
                <th scope="row">@usu.Id</th>
                <td>@usu.NombreDeUsuario</td>
                <td>@usu.Tipo</td>
                <td>
                    <p><a asp-controller="Usuario" asp-action="ModificarUsuario" asp-route-id="@usu.Id">Editar</a></p>
                    @if(usu.Tipo!=TiposUsuario.Administrador){
                        <p><a asp-controller="Usuario" asp-action="EliminarUsuario" asp-route-id="@usu.Id">Eliminar</a></p>
                    }
                </td>
            </tr>
        }
    </tbody>
</table>

@section Scripts{<partial name="_ValidationScriptsPartial"/>}