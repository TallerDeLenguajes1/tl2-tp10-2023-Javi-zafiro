@model UsuarioViewModel
<h3>Crear Usuario</h3>

<section class="formu">
<form asp-controller="Usuario" asp-action="CrearUsuario" class="form-logger">
    <section class="mb-3">
        <label asp-for="@Model.NombreDeUsuario" class="form-label"></label>
        <input asp-for="@Model.NombreDeUsuario" class="form-control"/>
        <span asp-validation-for="@Model.NombreDeUsuario" class="text-danger"></span>
    </section>
    <section class="mb-3">
        <label asp-for="@Model.Contrasenia" class="form-label">Contrase√±a</label>
        <input asp-for="@Model.Contrasenia" class="form-control"/>
        <span asp-validation-for="@Model.Contrasenia" class="text-danger"></span>
    </section>
    <section class="mb-3">
        <label asp-for="@Model.Tipo" class="form-label">Tipo</label>
        <select asp-for="@Model.Tipo" class="form-control" asp-items="Html.GetEnumSelectList<TiposUsuario>()">
            <option value="">Seleccione un estado</option>
        </select>
        <span asp-validation-for="@Model.Tipo" class="text-danger"></span>
    </section>
    <button type="submit" class="btn btn-success">Agregar</button>
</form>
</section>
@section Scripts{<partial name="_ValidationScriptsPartial"/>}