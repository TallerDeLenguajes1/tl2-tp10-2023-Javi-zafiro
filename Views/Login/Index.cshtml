@model LoginViewModel
<h1 class="text-center">Kanban</h1>
<h2 class="text-center">Login</h2>

@if (Model.TieneMensajeError)
{
    <div id="mensajeTemporal" class="alert alert-danger mensajes-form">
        @Model.MensajeError
    </div>
}
<section id="loginform">
    <form asp-controller="Login" asp-action="ComprobarUsuario" class="form-logger">
        <fieldset>Inicie Sesion</fieldset>
        <section class="mb-3">
            <label asp-for="@Model.Nombre" class="form-label"></label>
            <input asp-for="@Model.Nombre" class="form-control">
            <span asp-validation-for="@Model.Nombre" class="text-danger"></span>
        </section>
        <section class="mb-3">
            <label asp-for="@Model.Contrasenia" class="form-label"></label>
            <input asp-for="@Model.Contrasenia" type="password" class="form-control">
            <span asp-validation-for="@Model.Contrasenia" class="text-danger"></span>
        </section>
        <input id="botoniniciosesion" type="submit" value="Entrar" class="btn btn-outline-info">
    </form>
</section>
@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}

<script>
    document.addEventListener('DOMContentLoaded', function () {
        var mensajeTemporal = document.getElementById('mensajeTemporal');
        if (mensajeTemporal) {
            setTimeout(function () {
                mensajeTemporal.classList.add('ocultar_msj');
            }, 5000);
        }
    });
</script>