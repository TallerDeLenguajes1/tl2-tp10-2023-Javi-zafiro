@model CrearTareaViewModel
<form asp-controller="Tarea" asp-action="CrearTarea">
    <label asp-for="Nombre"></label>
    <input asp-for="Nombre" />
    <label asp-for="Descripcion"></label>
    <input asp-for="Descripcion" />
    <label asp-for="Color"></label>
    <select asp-for="Color">
        <option value="">Seleccione un color</option>
        <option value="Azul">Azul</option>
        <option value="Verde">Verde</option>
        <option value="Amarillo">Amarillo</option>
        <option value="Rojo">Rojo</option>
        <option value="Negro">Negro</option>
    </select>
    <label asp-for="Estado"></label>
    <select asp-for="Estado" asp-items="Html.GetEnumSelectList<EstadoTarea>()">
        <option value="">Seleccione un estado</option>
    </select>
    <input asp-for="@Model.IdTablero" type="hidden"/>
    <button type="submit" class="btn btn-success"
        onclick="return confirm('¿Estás seguro de crear esta tarea?')">Agregar</button>
</form>

@section Scripts{<partial name="_ValidationScriptsPartial"/>}