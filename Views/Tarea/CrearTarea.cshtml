@model CrearTareaViewModel
<form asp-controller="Tarea" asp-action="CrearTarea">
    <label asp-for="Nombre"></label>
    <input asp-for="Nombre" />
    <label asp-for="Descripcion"></label>
    <input asp-for="Descripcion" />
    <label asp-for="Color"></label>
    <input asp-for="Color" />
    <label asp-for="Estado"></label>
    <select asp-for="Estado" asp-items="Html.GetEnumSelectList<EstadoTarea>()">
        <option value="">Seleccione un estado</option>
    </select>
    <label asp-for="@Model.IdTablero"></label>
    <input asp-for="@Model.IdTablero" />
    <button type="submit" class="btn btn-success"
        onclick="return confirm('¿Estás seguro de crear esta tarea?')">Agregar</button>
</form>

@section Scripts{<partial name="_ValidationScriptsPartial"/>}