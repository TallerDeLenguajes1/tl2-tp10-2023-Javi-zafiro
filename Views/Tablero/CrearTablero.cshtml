@model CrearTableroViewModel
<form asp-controller="Tablero" asp-action="CrearTablero" class="form-logger">
    <input asp-for="@Model.IdUsuariPropietario" type="hidden" />
    <label asp-for="Nombre"></label>
    <input asp-for="Nombre" />
    <label asp-for="Descripcion"></label>
    <input asp-for="Descripcion" />
    <button type="submit" class="btn btn-success"
        onclick="return confirm('¿Estás seguro de crear el usuario?')">Agregar</button>
</form>


@section Scripts{<partial name="_ValidationScriptsPartial"/>}