@model TableroViewModel

<h3>Modificar Tablero</h3>

<div>
    <p>desea modificar este tablero: @Model.Nombre, @Model.Descripcion ?</p>
</div>
<form asp-controller="Tablero" asp-action="ModificarTablero" class="form-logger">
    <input asp-for="@Model.Id" type="hidden">
    <input asp-for="@Model.IdUsuariPropietario" type="hidden"/>
    <label asp-for="@Model.Nombre"></label>
    <input asp-for="@Model.Nombre" />
    <span asp-validation-for="@Model.Nombre" class="text-danger"></span>
    <label asp-for="@Model.Descripcion"></label>
    <input asp-for="@Model.Descripcion" />
    <span asp-validation-for="@Model.Descripcion" class="text-danger"></span>
    <button type="submit" class="btn btn-primary" >Actualizar</button>
    <a asp-controller="Tablero" asp-action="ListarTableros" class="btn btn-primary">Cancelar</a>
</form>


@section Scripts{<partial name="_ValidationScriptsPartial"/>}